:ext:
[".class"]

:components:
u1: byte
u2: byte{2}
u4: byte{4}

magic := 0xCA:0xFE:0xBA:0xBE

minor_version := u2
major_version := u2
version := minor_version:major_version

ACC_PUBLIC: bit
ACC_FINAL: bit
ACC_SUPER: bit
ACC_INTERFACE: bit
ACC_ABSTRACT: bit
ACC_SYNTHETIC: bit
ACC_ANNOTATION: bit
ACC_ENUM: bit
dc: bit := b0

access_flags :=
    dc:ACC_ENUM:ACC_ANNOTATION:ACC_SYNTHETIC
  : dc:ACC_ABSTRACT:ACC_INTERFACE:dc
  : dc:dc:ACC_SUPER:ACC_FINAL
  : dc:dc:dc:ACC_PUBLIC



this_class := u2
super_class := u2

member_count := u2

CONSTANT_Class := 7
CONSTANT_Class_info := CONSTANT_Class:name_index
CONSTANT_Fieldref := 9
CONSTANT_Methodref := 10
CONSTANT_InterfaceMethodref := 11
CONSTANT_String := 8
CONSTANT_Integer := 3
CONSTANT_Float := 4
CONSTANT_Long := 5
CONSTANT_Double := 6
CONSTANT_NameAndType := 12
CONSTANT_Utf8 := 1
CONSTANT_MethodHandle := 15
CONSTANT_MethodType := 16
CONSTANT_InvokeDynamic := 18

constant_pool_count := member_count
constant_pool_info :=
    count\constant_pool_count
  : constant_pool_entry{count - 1}

name_index := u2
name_and_type_index := u2
class_index := u2
string_index := u2
descriptor_index := u2

constant_pool_entry :=
    CONSTANT_Class_info
  | (CONSTANT_Fieldref:class_index:name_and_type_index)
  | (CONSTANT_Methodref:class_index:name_and_type_index)
  | (CONSTANT_InterfaceMethodref:class_index:name_and_type_index)
  | (CONSTANT_String:string_index)
  | (CONSTANT_Integer:u4)
  | (CONSTANT_Float:u4)
  | (CONSTANT_Long:u4:u4)
  | (CONSTANT_Double:u4:u4)
  | (CONSTANT_NameAndType:u2:u2)
  | (CONSTANT_Utf8:length\u2:u1{length})
  | (CONSTANT_MethodHandle:u1:u2)
  | (CONSTANT_MethodType:u2)
  | (CONSTANT_InvokeDynamic:u2:u2)

interfaces_entry := CONSTANT_Class_info

interfaces_count := member_count
interfaces_info :=
    ifcount\interfaces_count
  : interfaces_entry{ifcount}

fields_entry :=
  u2:name_index:descriptor_index:count\attributes_count:(u2:attrib_len\u4:u1{attrib_len}){count}

fields_count := member_count
fields_info :=
    fcount\fields_count
  : fields_entry{fcount}

methods_entry :=
  u2:name_index:descriptor_index:count\attributes_count:(u2:attrib_len\u4:u1{attrib_len}){count}

methods_count := member_count
methods_info :=
    mcount\methods_count
  : methods_entry{mcount}

attributes_entry := u2:attrib_len\u4:u1{attrib_len}

attributes_count := member_count
attributes_info :=
    acount\attributes_count
  : attributes_entry{acount}

root :=
    magic
  : version
  : constant_pool_info
  : access_flags
  : this_class
  : super_class
  : interfaces_info
  : fields_info
  : methods_info
  : attributes_info
